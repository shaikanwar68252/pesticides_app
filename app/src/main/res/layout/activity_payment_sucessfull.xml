<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <!-- Success Animation -->
        <ImageView
            android:id="@+id/tick"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Success Icon"/>

        <!-- Success Message -->
        <TextView
            android:id="@+id/sucessfullmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Successful!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/ordersucessfull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your order has been placed successfully."
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="15dp"/>

        <!-- Order Details Section -->

        <!-- Product Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imageorder"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/app_picture"
                android:contentDescription="Product Image"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/text112"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Square Finish"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text113"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: â‚¹983"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/text_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: 1"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Delivery Address Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/nameuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 Main Street, City, State, PIN-123456"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Continue Shopping Button -->
        <Button
            android:id="@+id/btn_continue_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue Shopping"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
