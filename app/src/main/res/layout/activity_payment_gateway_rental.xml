<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/img_land"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:contentDescription="Land Image"
        android:src="@drawable/app_picture" />

    <TextView
        android:id="@+id/txt_land_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Land Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/txt_booking_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking Duration: YYYY - YYYY"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price: â‚¹XXXX"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="5dp"/>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay Now"
        android:textColor="@android:color/white"
        android:padding="10dp"/>

</LinearLayout>
