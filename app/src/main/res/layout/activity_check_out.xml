<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
     <androidx.cardview.widget.CardView
         android:layout_width="390dp"
         android:layout_height="56dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >


             <TextView
                 android:id="@+id/textView22"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:drawableStart="@drawable/back_arrow_new"
                 android:fontFamily="@font/inter_bold"
                 android:paddingTop="13.5dp"
                 android:paddingBottom="14.5dp"
                 android:text="Checkout"
                 android:textAlignment="center"
                 android:textSize="18sp" />
         </LinearLayout>
     </androidx.cardview.widget.CardView>

        <!-- Product Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/product_image123"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_placeholder"
                    android:background="@drawable/round_bg"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/product_name_checkout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Premium Pest Control Solution"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter_semibold" />

                    <TextView
                        android:id="@+id/checkout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1L Professional Grade"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_light" />

                    <!-- Price & Quantity -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/product_pricecheck_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$49.99"
                            android:textColor="#2E7D32"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_semibold" />

                        <!-- Quantity Controls -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end">

                            <ImageView
                                android:id="@+id/btn_decrease_check"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/round_icon"
                                android:src="@drawable/minus1_ic"
                                android:scaleType="centerInside"
                                android:padding="4dp" />

                            <TextView
                                android:id="@+id/product_quantitycheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginHorizontal="8dp"/>

                            <ImageView
                                android:id="@+id/btn_increasecheck"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/plus1_ic"
                                android:scaleType="centerInside"
                                android:background="@drawable/round_icon"
                                android:padding="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Delivery Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold" />

            <TextView
                android:id="@+id/textView22change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change"
                android:textColor="#2E7D32"
                android:textSize="14sp"
                android:fontFamily="@font/inter_medium"
                android:layout_weight="1"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Help Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="#E5E7EB"
            app:cardElevation="5dp"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="17dp"
                android:paddingVertical="17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/loc_green_ic"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/inter_medium"

                    android:text="John Smith"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inter_light"
                    android:paddingStart="32sp"
                    android:text="+1 (555) 123-4567"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inter_light"
                    android:paddingStart="32sp"
                    android:text="123 Agriculture Street, Suite 456"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inter_light"
                    android:paddingStart="32sp"
                    android:text="Farmington, CA 94538"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Payment Method"
           android:layout_marginHorizontal="16sp"
           android:textSize="16sp"
           android:fontFamily="@font/inter_semibold">

       </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="358dp"
                android:layout_height="78dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="#E5E7EB"
                app:cardElevation="5dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="17dp"
                    android:paddingHorizontal="17dp"
                    android:orientation="vertical">
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </RadioGroup>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="358dp"
                android:layout_height="78dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="#E5E7EB"
                app:cardElevation="5dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="17dp"
                    android:paddingHorizontal="17dp"
                    android:orientation="vertical">


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="358dp"
                android:layout_height="78dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="#E5E7EB"
                app:cardElevation="5dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="17dp"
                    android:paddingHorizontal="17dp"
                    android:orientation="vertical">


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F9FAFB"
            app:cardCornerRadius="12dp"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12sp"
                android:paddingHorizontal="16sp"
                android:layout_marginTop="24sp"
                android:paddingVertical="16sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Order Summary"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="16sp">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16sp"
                    android:layout_marginBottom="8dp">


                    <TextView
                        android:id="@+id/textView443"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subtotal"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter_medium"/>

                    <TextView
                        android:id="@+id/textView453"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$139.97"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16sp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textView444"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delivery Fee"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter_medium"/>

                    <TextView
                        android:id="@+id/textView454"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$139.97" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16sp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/textView44"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Tax"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter_medium"/>

                    <TextView
                        android:id="@+id/textView45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="$139.97" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView442"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter_bold"/>

                    <TextView
                        android:id="@+id/textView4541"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$139.97"
                        android:textSize="16sp"
                        android:textColor="#2E7D32"
                        android:fontFamily="@font/inter_semibold"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="358dp"
            android:layout_height="92dp"
            android:layout_margin="10dp"


            app:cardCornerRadius="12dp"
            android:backgroundTint="#FFF3E0"
            app:cardElevation="5dp"
            android:layout_marginHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Handle with care. This product contains chemicals. Please read and follow all safety instructions provided with the product."

                    android:textSize="14sp"
                    android:drawableLeft="@drawable/danger1_ic"
                    android:fontFamily="@font/inter_medium"
                    android:paddingTop="11dp"
                    android:paddingBottom="12sp"
                    android:paddingRight="35dp"
                    android:paddingLeft="29dp"
                    android:drawablePadding="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/getStartedBtn"
            android:layout_width="358dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/filled_btn_bg"
            android:text="Place Order • $174.98"
            android:fontFamily="@font/inter_semibold"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Estimated delivery: 2-3 business days"
            android:textSize="14sp"
            android:fontFamily="@font/inter_light"
            android:drawableStart="@drawable/lorry_ic"
            android:layout_marginHorizontal="24sp"
            android:layout_marginVertical="24sp"
            android:drawablePadding="8dp">

        </TextView>



    </LinearLayout>
</ScrollView>
