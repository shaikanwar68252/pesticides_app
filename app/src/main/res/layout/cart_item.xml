<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/product_image112"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_placeholder"
            android:background="@drawable/round_bg"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <!-- Product Name -->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="157dp"
                android:layout_height="56dp"

                android:text="Agricultural Growth Enhancer"

                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"/>


            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rental_catergory_bg"
                android:paddingHorizontal="15dp"
                android:paddingVertical="6dp"
                android:text="Category III"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <!-- Price & Quantity Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="$49.99"

                    android:textSize="16sp"
                    android:fontFamily="@font/inter_semibold" />

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/btn_decrease"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                      android:background="@drawable/round_icon"
                        android:src="@drawable/minus1_ic"
                        android:scaleType="centerInside"
                        android:padding="4dp"/>

                    <TextView
                        android:id="@+id/product_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="8dp"/>

                    <ImageView
                        android:id="@+id/btn_increase"
                        android:layout_marginLeft="10dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/plus1_ic"
                        android:scaleType="centerInside"
                        android:background="@drawable/round_icon"
                        android:padding="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top"
            android:src="@drawable/delete_ic" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
