<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main87686"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewBackBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitCenter"
                android:padding="15dp"
                app:srcCompat="@drawable/backarrow_1" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/inter_semibold"
                android:text="Product Details"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageViewshare"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/share_ic" />

            <ImageView
                android:id="@+id/imageViewsave"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/save_ic" />
        </LinearLayout>

        <!-- Product Image -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/home_placeholder" />

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="EcoShield Pro Pesticide"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="By GreenGuard Solutions"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="1 Litre"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productOffPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="12sp"
                    android:fontFamily="@font/inter_bold"
                    android:text="$89.99"
                    android:textColor="#15803D"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12sp"
                    android:fontFamily="@font/inter"
                    android:text="$119.99"
                    android:textColor="#9CA3AF"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/offer"
                    android:layout_width="75.39dp"
                    android:layout_height="28dp"
                    android:background="@drawable/offer_percent_btn"

                    android:text="25% OFF"
                    android:textAllCaps="false"
                    android:textColor="#2E7D32" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="4dp">

                <ImageView
                    android:id="@+id/btn_decrease_prodetails"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/round_icon"
                    android:padding="1dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/minus1_ic" />

                <TextView
                    android:id="@+id/product_quantitypro_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="2"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btn_increasepro_details"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_icon"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/plus1_ic" />
            </LinearLayout>

            <TextView
                android:id="@+id/stockStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12sp"
                android:fontFamily="@font/inter_medium"
                android:gravity="end"
                android:text="In Stock"
                android:textColor="#16A34A"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16sp"
            android:layout_marginTop="9dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Description"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="356sp"
                android:layout_height="128sp"
                android:fontFamily="@font/inter_medium"
                android:text="EcoShield Pro is an advanced, eco-friendly pesticide designed for effective pest control while maintaining environmental safety. This professional-grade solution offers long-lasting protection for various crops."
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/key1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Key Features"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/keyfeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/dot_ic"
                android:drawablePadding="23dp"
                android:text="Broad-spectrum pest control">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/dot_ic"
                android:drawablePadding="23dp"
                android:text="Environmental-friendly formula">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/dot_ic"
                android:drawablePadding="23dp"
                android:text="Long-lasting effectiveness">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/dot_ic"
                android:drawablePadding="23dp"
                android:text="Broad-spectrum pest control">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/dot_ic"
                android:drawablePadding="23dp"
                android:text="Safe for beneficial insects">

            </TextView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="16dp"
            android:backgroundTint="#FEFCE8"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/safety"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16sp"
                    android:drawableStart="@drawable/danger1_ic"
                    android:drawablePadding="12sp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Safety Precautions"
                    android:textColor="#854D0E"
                    android:textSize="16sp">

                </TextView>

                <TextView
                    android:id="@+id/safety_precautions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/dot2_ic"
                    android:drawablePadding="12sp"
                    android:fontFamily="@font/inter_light"

                    android:text=" Wear protective gear during application"
                    android:textColor="#854D0E"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/dot2_ic"
                    android:drawablePadding="12sp"
                    android:fontFamily="@font/inter_light"
                    android:text=" Keep away from children and pets"
                    android:textColor="#854D0E"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/dot2_ic"
                    android:drawablePadding="12sp"
                    android:fontFamily="@font/inter_light"
                    android:text="Store in a cool, dry place"
                    android:textColor="#854D0E"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/dot2_ic"
                    android:drawablePadding="12sp"
                    android:fontFamily="@font/inter_light"
                    android:text=" Follow recommended dosage strictly"
                    android:textColor="#854D0E"
                    android:textSize="14sp">

                </TextView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16sp"
            android:layout_marginTop="21dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/technical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Technical Specifications"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16sp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/technical_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_light"
                    android:text="Active Ingredient"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/technical_specifications1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Organic Compounds"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_light"
                    android:text="Concentration"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/per"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="25%"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_light"
                    android:text="Package Size"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/litre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="1 Liter"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_light"
                    android:text="Shelf Life"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView55mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="24 months"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_bg"

                android:text="Add To Cart"
                android:textAllCaps="false"
                android:textColor="#15803D">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/filled_btn_bg"
                android:text="Buy Now"
                android:textAllCaps="false"
                android:textColor="#FFFFFF">

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>


    </LinearLayout>

</ScrollView>
