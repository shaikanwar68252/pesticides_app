<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/main_proceedrent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearLayout_rental"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/view_arrowrental"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/back_arrow" />
            <TextView
                android:id="@+id/text_rentMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_semibold"
                android:textAlignment="center"
                android:text="Rental Details"
                android:textSize="18sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/product_rental1"
            android:layout_width="358dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/curve_img"
            android:src="@drawable/home_placeholder" />
        <TextView
            android:layout_width="388dp"
            android:layout_height="41dp"
            android:text="John Deere 5E Series Tractor"
            android:fontFamily="@font/inter_bold"
            android:textSize="24sp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="16sp"
            android:layout_marginBottom="10sp"

            android:layout_marginRight="67.83sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="75 HP tractor with advanced features and excellent fuel efficiency"
            android:fontFamily="@font/inter_light"
            android:textSize="16sp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="67.83sp"/>
        <TextView
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:text="$75.00/hour"
            android:fontFamily="@font/inter_bold"
            android:textSize="24sp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="67.83sp"
            android:textColor="#2563EB"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Availability"
                android:fontFamily="@font/inter_semibold"
                android:textSize="18sp"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="16sp"
                android:layout_marginBottom="16sp"
                android:layout_marginRight="67.83sp"/>
            <androidx.cardview.widget.CardView

                android:layout_width="358dp"
                android:layout_height="76dp"
                app:cardCornerRadius="12dp"
             android:layout_marginHorizontal="16sp"
                app:cardElevation="4dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Calendar Icon -->
                    <ImageView
                        android:id="@+id/date_card_rent"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/cal_blue"

                        android:layout_marginEnd="12dp"/>

                    <!-- Text Layout -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_medium"
                            />

                        <!-- Date -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="March 15, 2024"
                            android:fontFamily="@font/inter_light"
                            android:textSize="14sp"
                          />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:layout_width="358dp"
                android:layout_height="76dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Calendar Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/clock_blue"

                        android:layout_marginEnd="12dp"/>

                    <!-- Text Layout -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Slot"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_medium"/>

                        <!-- Date -->
                        <TextView
                            android:id="@+id/time_card_rent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:00 AM - 2:00 PM"
                            android:textSize="14sp"
                          />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="358dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="21dp"
                android:layout_marginHorizontal="16sp">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="19dp"
                    android:background="@android:color/white"
                    android:elevation="8dp">

                    <!-- CardView (Order Summary) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F9FAFB"
                        app:cardCornerRadius="12dp"
                        android:padding="13dp"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/textView47"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Price Details"
                                android:layout_marginBottom="6dp"
                                android:textSize="18sp"
                                android:fontFamily="@font/inter_semibold"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:id="@+id/textView443"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Base Rate"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/inter_light"/>

                                <TextView
                                    android:id="@+id/textView453"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$139.97"
                                    android:textSize="16sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:id="@+id/textView444"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Service Fee"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/inter_light"/>

                                <TextView
                                    android:id="@+id/textView454"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$139.97" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="10dp">

                                <TextView
                                    android:id="@+id/textView44"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Tax"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/inter_light"/>

                                <TextView
                                    android:id="@+id/textView45"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="$139.97" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView442"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Total"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/inter_bold"/>

                                <TextView
                                    android:id="@+id/textView4541"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$139.97"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/inter_bold"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Button -->

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancellation is available up to 24 hours before the rental start time."
                    android:drawableStart="@drawable/detail_ic"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/inter_medium"
                    android:drawablePadding="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For support, contact our 24/7 customer service."
                    android:drawableStart="@drawable/detail_ic"
                    android:textSize="14sp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/inter_medium"
                    android:drawablePadding="12dp"/>




            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_proceed_rental_payment"
                android:layout_width="358dp"
                android:layout_height="52dp"
                android:layout_marginHorizontal="16sp"

                android:background="@drawable/filled_btn_bg"
                android:backgroundTint="#2563EB"
                android:fontFamily="@font/inter_semibold"
                android:paddingHorizontal="24dp"
                android:text="Proceed to Payment"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp" />



        </LinearLayout>




        </LinearLayout>






</ScrollView>
