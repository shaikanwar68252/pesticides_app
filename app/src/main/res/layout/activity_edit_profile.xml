<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">
    <LinearLayout
        android:id="@+id/main_editprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageViewarrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/back_arrow_new" />
            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_semibold"
                android:text="Edit Profile"
                android:textAlignment="center"
                android:textSize="20sp" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Save"
               android:fontFamily="@font/inter_semibold"
               android:textSize="16sp"
               android:textColor="#2E7D32"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile1_ic"
                android:layout_marginTop="24sp"
                android:contentDescription="@string/profile_picture"
                android:layout_marginHorizontal="7.5dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:text="Change Photo"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Personal Information -->

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:fontFamily="@font/inter_semibold"
                android:textSize="16sp"
                android:layout_marginHorizontal="16dp"
               />
        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16sp"
            android:fontFamily="@font/inter"
            android:text="Full Name"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextTextname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/edit_text_bg"

            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            android:padding="15dp" />
        <TextView
            android:id="@+id/textView17phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16sp"
            android:fontFamily="@font/inter"
            android:text=" Phone Number"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextTextphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/edit_text_bg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Enter your phone number"
            android:inputType="text"
            android:padding="15dp" />
        <TextView
            android:id="@+id/textView17email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16sp"
            android:fontFamily="@font/inter"
            android:text="Email "
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_hintemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/edit_text_bg"

            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Enter your email"
            android:inputType="text"
            android:padding="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address Details"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginTop="32sp"
            android:textSize="16sp"
            android:layout_marginHorizontal="16dp"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16sp"
            android:fontFamily="@font/inter"
            android:text="Address"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/edit_text_bg"

            android:ems="10"
            android:hint="Enter your Address"
            android:inputType="text"
            android:padding="15dp" /> <TextView
        android:id="@+id/town"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16sp"
        android:fontFamily="@font/inter"
        android:text="Town
"
        android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_town"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/edit_text_bg"

            android:ems="10"
            android:hint="Enter your Town"
            android:inputType="text"
            android:padding="15dp" />
        <TextView
        android:id="@+id/state1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16sp"
        android:fontFamily="@font/inter"
        android:text="State"
        android:textSize="14sp" />

        <EditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/edit_text_bg"

            android:ems="10"
            android:hint="Enter your State"
            android:inputType="text"
            android:padding="15dp" /> <TextView
        android:id="@+id/pincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16sp"
        android:fontFamily="@font/inter"
        android:text="Pincode"
        android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/edit_text_bg"
            android:drawableStart="@drawable/email_ic"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Enter Pincode"
            android:inputType="text"
            android:padding="15dp" />





    </LinearLayout>





</ScrollView>