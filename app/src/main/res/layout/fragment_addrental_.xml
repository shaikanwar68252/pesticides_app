<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title for Rentals Page -->
        <TextView
            android:id="@+id/tv_rentals_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rentals Page"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp"/>

        <!-- RecyclerView for displaying rental items -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:scrollbars="vertical"/>

        <!-- Button to proceed with rental -->
        <Button
            android:id="@+id/btn_proceed_rental"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Your Rentals"
            android:layout_margin="16dp"/>

    </LinearLayout>
</ScrollView>
